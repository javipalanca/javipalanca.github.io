        transition: all 0.2s ease;
    }
    
    #collapse-code i {
        transition: transform 0.3s ease;
    }
    
    /* Button highlight */
    #toggle-code.active {
        background-color: #0dcaf0 !important;
        color: white !important;
        border-color: #0dcaf0 !important;
        box-shadow: 0 0 0 0.2rem rgba(13, 202, 240, 0.25);
    }
    
