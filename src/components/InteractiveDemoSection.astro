        border-color: rgba(255, 255, 255, 0.1);
    }
    
    :global(.dark-mode) .code-body pre {
        color: #e2e8f0;
    }
    
    :global(.dark-mode) .code-body::-webkit-scrollbar-track {
        background: rgba(255, 255, 255, 0.05);
    }
    
    :global(.dark-mode) .code-body::-webkit-scrollbar-thumb {
