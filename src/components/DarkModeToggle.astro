---
// Dark Mode Toggle component
export interface Props {
  small?: boolean;
}

const { small = false } = Astro.props;
---

<button
  id="darkModeToggle"
  class={`dark-mode-toggle ${small ? 'dark-mode-toggle-small' : ''}`}
  aria-label="Toggle dark mode"
  onclick="window.toggleDarkMode()"
>
  <i class="bi bi-moon-fill" id="darkModeIcon"></i>
</button>

<style>
  /* Dark mode toggle */
  .dark-mode-toggle {
    background: none;
    border: 1px solid #dee2e6;
    color: #6c757d;
    padding: 8px 12px;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 1rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .dark-mode-toggle:hover {
    color: var(--primary-color);
    border-color: var(--primary-color);
    background-color: rgba(52, 152, 219, 0.1);
  }

  .dark-mode-toggle:focus {
    outline: none;
    box-shadow: 0 0 0 2px rgba(52, 152, 219, 0.25);
  }

  :global(body.dark-mode) .dark-mode-toggle {
    border-color: var(--dark-border);
    color: var(--dark-text);
  }

  :global(body.dark-mode) .dark-mode-toggle:hover {
    color: var(--secondary-color);
    border-color: var(--secondary-color);
    background-color: rgba(46, 204, 113, 0.1);
  }

  /* Small dark mode toggle variant */
  .dark-mode-toggle-small {
    padding: 6px 8px;
    font-size: 0.875rem;
    border-radius: 4px;
    min-width: auto;
    width: auto;
  }
</style>
