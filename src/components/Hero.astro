---
// Hero section component
const baseUrl = import.meta.env.BASE_URL;
---

<section class="hero">
    <div class="container hero-content">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <div class="d-flex align-items-center mb-4">
                    <img src={`${baseUrl}img/spade-agent-network-fixed.svg`} alt="SPADE Logo" height="80" class="me-3 d-none d-md-block">
                    <h1 class="display-4 fw-bold mb-0">Smart Python Agent Development Environment</h1>
                </div>
                <p class="lead mb-4">A powerful multi-agent systems platform written in Python and based on instant messaging (XMPP). Develop intelligent agents that can communicate with both other agents and humans.</p>
                <div class="d-flex flex-wrap gap-2">
                    <a href="https://spade-mas.readthedocs.io" class="btn btn-light btn-lg px-4">Get Started</a>
                    <a href="https://pypi.python.org/pypi/spade" class="btn btn-outline-light btn-lg px-4">
                        <i class="bi bi-download me-2"></i>Download
                    </a>
                </div>
            </div>
            <div class="col-lg-5 d-none d-lg-block">
                <img src={`${baseUrl}img/spade_index.png`} class="img-fluid rounded shadow-lg" alt="SPADE Agents">
            </div>
        </div>
    </div>
</section>
